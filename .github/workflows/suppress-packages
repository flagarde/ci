name: Remove package

on:
  schedule:
    - cron:  '0 8 * * *'

jobs:
  remove-package-versions:
    runs-on: ubuntu-latest
    
    strategy:
      fail-fast: false
      matrix:
        version:
        - gcc-4.4
        - gcc-4.5
        - gcc-4.6
        - gcc-4.7
        - gcc-4.8
        - gcc-4.9
        - gcc-5
        - gcc-6
        - gcc-7
        - gcc-8
        - gcc-9
        - gcc-10
        - gcc-11
        - gcc-12
        - clang-3.5
        - clang-3.6
        - clang-3.7
        - clang-3.8
        - clang-3.9
        - clang-4
        - clang-5
        - clang-6
        - clang-7
        - clang-8
        - clang-9
        - clang-10
        - clang-11
        - clang-12
        - clang-13
        - clang-14
        - clang-15
    
    steps:
      - name: Delete packages
      - uses: actions/delete-package-versions@v3
        with:
          package-name: ci-ubuntu-${{ matrix.version }}-x86_64 
          min-versions-to-keep: 2
